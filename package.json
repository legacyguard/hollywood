{
  "name": "document-safe-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "hollywood",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo 'Use npm run web:dev or npm run mobile:dev'",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "web:dev": "cd hollywood && npm run dev",
    "mobile:dev": "cd mobile && npm run start",
    "web:build": "cd hollywood && npm run build",
    "mobile:build": "cd mobile && npx expo export --platform all",
    "test:web": "cd hollywood && npm run test",
    "test:mobile": "cd mobile && npm run test"
  },
  "devDependencies": {
    "@clerk/testing": "^1.12.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cypress": "^0.1.6",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-react": "^5.0.2",
    "cypress": "^14.5.4",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.542.0"
  }
}
