{
  "name": "document-safe-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "hollywood",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo 'Use npm run web:dev or npm run mobile:dev'",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "web:dev": "cd hollywood && npm run dev",
    "mobile:dev": "cd mobile && npm run start",
    "web:build": "cd hollywood && npm run build",
    "mobile:build": "cd mobile && npx expo export --platform all",
    "test:web": "cd hollywood && npm run test",
    "test:mobile": "cd mobile && npm run test"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
